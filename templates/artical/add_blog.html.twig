{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Add Blog - Blog Management System' }}
{% endblock %}

{% block body %}

	<div class="container-padding">
		<div class="row">
			{% block flash_messages %}
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="alert alert-{{ type }} alert-dismissible" role="alert">
							<button type="button" class="close" data-dismiss="alert">
								<span aria-hidden="true">&times;</span>
								<span class="sr-only">Close</span>
							</button>
							{{ message | raw }}
						</div>
					{% endfor %}
				{% endfor %}
			{% endblock %}
			<div class="panel panel-default panel-height-top">
				<div class="panel-title class-center">
					{{ title}}
				</div>
				<div class="panel-body">
					{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
					{{ form_widget(form) }}
					<div class="clearfix"></div>
					<div class="form-group col-md-12 margin-t-10">
						<input type="submit" class="btn btn-default" value="{{ 'Save'|trans }}"/>
						<a href="{{ path('app_artical') }}" class="btn">{{ 'Cancel'|trans }}</a>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
